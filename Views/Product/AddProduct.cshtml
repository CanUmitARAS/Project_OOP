@model Project_OOP.Entity.Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Ürün Ekleme</h1>

<form method="Post">

    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x=>x.ProductName, new{ @class= "form-control"})
    <br />
    @Html.Label("Fiyat")
    @Html.TextBoxFor(x=>x.Price, new{ @class="form-control" } )
    <br />
    @Html.Label("Stok Sayisi")
    @Html.TextBoxFor(x=>x.Stock, new { @class="form-control"} )
    <br />
    <button class="btn btn-outline-info">Ürünü ekle</button>

</form>
